<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tabla de Datos</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

</head>

<body>
  <div class="container">
    <h2><%= title %></h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Cantidad en Stock</th>
          <th>Cantidad en Alquiler</th>
          <th>Cantidad Libre</th>
          <th>Facturaci√≥n</th>
          <th>Editar</th>
          <th>Borrar</th>
        </tr>
      </thead>
      <% data.forEach(function(modelo) { %>
        <tbody>
          <tr>
            <td>
              <%= modelo.nombre_modelo %>
            </td>
            <td>
              <%= modelo.unidades_totales %>
            </td>
            <td>
              <%= modelo.unidades_alquiladas %>
            </td>
            <td>
              <%= modelo.unidades_totales - modelo.unidades_alquiladas %>
            </td>
            <td>
              <%= modelo.facturacion %>
            </td>
            <td><a
                href="/formulario?tipo=<%= modelo.tipo %>&id_modelo=<%= modelo.id_modelo %>&nombre_modelo=<%= modelo.nombre_modelo %>&unidades_totales=<%= modelo.unidades_totales %>&unidades_alquiladas=<%= modelo.unidades_alquiladas %>&personas=<%= modelo.personas %>&precioDia=<%= modelo.precioDia %>&puertas=<%= modelo.puertas %>&cambio=<%= modelo.cambio %>&maletas=<%= modelo.maletas %>"
                class="btn btn-primary">Editar</a></td>
                <td>
            <form action="/borrar/<%= modelo.id_modelo %>" method="post">
              <button type="submit" class="btn btn-danger">Borrar</button>
            </form>
            </td>
        </tbody>
        <% }); %>
    </table>

    <div>
      <p><a href="/ingresar" class="btn btn-secondary">Ingresar nuevos vehiculos</a>
      </p>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>